<mvc:View
  controllerName="courseproject.controller.App"
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <VBox>
    <Toolbar class="sapUiSmallMarginBottom">
      <Title text="{i18n>appTitle}" />
      <ToolbarSpacer />

      <Label text="{i18n>languageLabel}" class="sapUiTinyMarginEnd" />
      <Select width="10rem" selectedKey="{view>/lang}" change="onLanguageChange">
        <items>
          <core:Item key="hu" text="{i18n>languageHungarian}" />
          <core:Item key="en" text="{i18n>languageEnglish}" />
          <core:Item key="de" text="{i18n>languageGerman}" />
        </items>
      </Select>
    </Toolbar>

    <App id="app" />
  </VBox>
</mvc:View>
