<mvc:View
  controllerName="courseproject.controller.SupplierDetails"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
>
  <Page
    id="supplierDetailsPage"
    title="{i18n>supplierDetailsTitle}"
    showNavButton="true"
    navButtonPress="onNavBack"
  >
    <headerContent>
      <Button
        icon="sap-icon://delete"
        type="Neutral"
        text="{i18n>button_delete}"
        press="onDeleteSupplier"
      />
      <Button
        icon="sap-icon://edit"
        type="Neutral"
        text="{i18n>button_edit}"
        press="onOpenEditSupplier"
      />
    </headerContent>

    <content>
      <VBox id="detailsFormBox" busy="{view>/busy}" busyIndicatorDelay="0">
        <f:SimpleForm id="supplierDetailsForm" editable="false" layout="ResponsiveGridLayout">
          <f:content>
            <Label text="{i18n>supplierId}" />
            <Text text="{ID}" />

            <Label text="{i18n>supplierName}" />
            <Text text="{Name}" />

            <Label text="{i18n>supplierStreet}" />
            <Text text="{Address/Street}" />

            <Label text="{i18n>supplierCity}" />
            <Text text="{Address/City}" />

            <Label text="{i18n>supplierState}" />
            <Text text="{Address/State}" />

            <Label text="{i18n>supplierZip}" />
            <Text text="{Address/ZipCode}" />

            <Label text="{i18n>supplierCountry}" />
            <Text text="{Address/Country}" />

            <Label text="{i18n>supplierConcurrency}" />
            <Text text="{Concurrency}" />
          </f:content>
        </f:SimpleForm>
      </VBox>

      <Title
        text="{i18n>titleCategories}"
        level="H2"
        class="sapUiMediumMarginTop sapUiSmallMarginBottom"
      />
      <Table
        id="categoriesTable"
        items="{CategoriesModel>/items}"
        noDataText="{i18n>noCategories}"
        busy="{CategoriesModel>/busy}"
        busyIndicatorDelay="0"
      >
        <columns>
          <Column>
            <Text text="{i18n>columnCategoryName}" />
          </Column>
          <Column>
            <Text text="{i18n>columnCategoryDescription}" />
          </Column>
        </columns>

        <items>
          <ColumnListItem>
            <cells>
              <Text text="{CategoriesModel>Name}" />
              <Text text="{CategoriesModel>Description}" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
  </Page>
</mvc:View>
